<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cvNotification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#18181b"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ID de la notificación -->
        <TextView
            android:id="@+id/txtNotificationId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificación ID: 123abc"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#ffffff"
            android:layout_marginTop="8dp" />

        <!-- Título -->
        <TextView
            android:id="@+id/txtNotificationTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título de la notificación"
            android:textSize="13sp"
            android:textColor="#ffffff"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Cuerpo -->
        <TextView
            android:id="@+id/txtNotificationBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Este es el cuerpo de la notificación que puede ser un poco más largo..."
            android:textSize="12sp"
            android:textColor="#cccccc"
            android:layout_marginTop="4dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Fecha -->
        <TextView
            android:id="@+id/txtNotificationDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14/07/2025"
            android:textSize="12sp"
            android:textColor="#aaaaaa"
            android:layout_marginTop="4dp"
            android:layout_gravity="end" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
