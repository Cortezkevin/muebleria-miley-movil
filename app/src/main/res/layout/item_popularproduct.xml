<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewProductPopular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:layout_margin="8dp" >

    <LinearLayout
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Imagen del producto -->
        <ImageView
            android:id="@+id/imgProductPopular"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:contentDescription="Imagen del producto" />

        <!-- Nombre del producto -->
        <TextView
            android:id="@+id/txtBrand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ROBERTA ALLEN"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/txtNamePopular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cubrecama ViÃ±a Con Sherpa Roberta Allen"
            android:textSize="14sp"
            android:textColor="#000000"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Tienda -->
        <TextView
            android:id="@+id/txtSeller"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Por Inversiones Miley"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="2dp" />

        <!-- Precio actual y descuento -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/txtPricePopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S/149.90"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#D50000" />

            <TextView
                android:id="@+id/txtDiscount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-32%"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/bd_discount"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

        <!-- Precio original tachado -->
        <TextView
            android:id="@+id/txtOriginalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S/219.90"
            android:textSize="12sp"
            android:textColor="#999999"/>

        <!-- Rating -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical">

            <RatingBar
                android:id="@+id/ratingBar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:isIndicator="true"
                android:stepSize="0.5"
                android:layout_marginEnd="4dp" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
